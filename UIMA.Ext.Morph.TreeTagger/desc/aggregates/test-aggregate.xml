<?xml version="1.0" encoding="UTF-8" ?>
<analysisEngineDescription xmlns="http://uima.apache.org/resourceSpecifier">
	<frameworkImplementation>org.apache.uima.java</frameworkImplementation>
	<primitive>false</primitive>

	<delegateAnalysisEngineSpecifiers>
		<delegateAnalysisEngine key="tokenizer">
			<import name="ru.kfu.cll.uima.tokenizer.InitialTokenizer" />
		</delegateAnalysisEngine>
		<delegateAnalysisEngine key="postTokenizer">
			<import name="ru.kfu.cll.uima.tokenizer.PostTokenizer" />
		</delegateAnalysisEngine>
		<delegateAnalysisEngine key="morphTagger">
			<import name="ru.kfu.itis.issst.uima.morph.treetagger.MorphTagger" />
		</delegateAnalysisEngine>
	</delegateAnalysisEngineSpecifiers>

	<analysisEngineMetaData>
		<name>test-morph-treeTagger-aggregate</name>

		<configurationParameters>
			<configurationParameter>
                <name>treeTaggerModelName</name>
                <type>String</type>
                <mandatory>true</mandatory>
                <overrides>
                	<parameter>morphTagger/treeTaggerModelName</parameter>
                </overrides>
            </configurationParameter>
            <configurationParameter>
            	<name>tagMapperClass</name>
            	<type>String</type>
            	<overrides>
            		<parameter>morphTagger/tagMapperClass</parameter>
            	</overrides>
            </configurationParameter>
		</configurationParameters>
		<configurationParameterSettings>
			<nameValuePair>
				<name>treeTaggerModelName</name>
				<value>
					<string>c:\rinat\data\treetagger-sharoff\russian.par:UTF-8</string>
				</value>
			</nameValuePair>
			<!-- <nameValuePair>
				<name>tagMapperClass</name>
				<value>
					<string/>
				</value>
			</nameValuePair> -->
		</configurationParameterSettings>
		<flowConstraints>
			<fixedFlow>
				<node>tokenizer</node>
				<node>postTokenizer</node>
				<node>morphTagger</node>
			</fixedFlow>
		</flowConstraints>
	</analysisEngineMetaData>

</analysisEngineDescription>