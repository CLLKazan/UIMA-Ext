<?xml version="1.0" encoding="UTF-8"?>
<typeSystemDescription xmlns="http://uima.apache.org/resourceSpecifier">
	<name>uima-ext-phrase-recognizer</name>
	<description />
	<version>0.1</version>
	<vendor>Intelligent Search Systems &amp; Semantic Technologies Lab @ Kazan Federal University</vendor>
	<imports>
		<import name="org.opencorpora.morphology-ts" />
	</imports>
	<types>
		<typeDescription>
			<name>ru.kfu.itis.issst.uima.phrrecog.cas.Phrase</name>
			<description>
				Represents typed 'phrase', i.e. a head word with its dependents.
				Phrase annotation should have the same borders with its head word. 
			</description>
			<supertypeName>uima.tcas.Annotation</supertypeName>
			<features>
				<featureDescription>
				<!-- 'type' is reserved by UIMA model-->
					<name>phraseType</name>
					<description />
					<rangeTypeName>ru.kfu.itis.issst.uima.phrrecog.cas.PhraseType</rangeTypeName>
				</featureDescription>
				<featureDescription>
					<name>head</name>
					<description />
					<rangeTypeName>org.opencorpora.cas.Word</rangeTypeName>
				</featureDescription>
				<featureDescription>
					<name>dependents</name>
					<description />
					<rangeTypeName>uima.cas.FSArray</rangeTypeName>
					<elementType>org.opencorpora.cas.Word</elementType>
				</featureDescription>
			</features>
		</typeDescription>
		<typeDescription>
			<name>ru.kfu.itis.issst.uima.phrrecog.cas.PhraseType</name>
			<supertypeName>uima.cas.String</supertypeName>
			<allowedValues>
				<value>
					<string>VP</string>
				</value>
				<value>
					<string>NP</string>
				</value>
			</allowedValues>
		</typeDescription>
	</types>
</typeSystemDescription>