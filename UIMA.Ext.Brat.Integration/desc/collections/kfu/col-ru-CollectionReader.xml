<?xml version="1.0" encoding="UTF-8"?>
<collectionReaderDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
  <implementationName>com.hp.hpl.events.uima.collections.CollectionReader</implementationName>
  <processingResourceMetaData>
    <name>col-desc-file-as-collection-reader</name>
    <description/>
    <version>1.0</version>
    <vendor/>
    <configurationParameters>
      <configurationParameter>
        <name>DocumentsSource</name>
        <description>File or folder</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>SourceEncoding</name>
        <description>Encoding of file (s)</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>SourceExtension</name>
        <description>In case, if directory is specified, extension is used to fetch files from that directory. Leave as empty string if file name is specified.</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>Recursive</name>
        <description>If directory is specified, this parameter says if collection reader should also scan subdirectories.</description>
        <type>Boolean</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>TaskProviderClassName</name>
        <description>Full class name of the task provider to use for single files.</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
    </configurationParameters>
    <configurationParameterSettings>
      <!-- TO BE OVERRIDEN in CPE descriptor 
      <nameValuePair>
        <name>DocumentsSource</name>
        <value>
          <string>C:/work/projects/java/workspace/EventsDownloaders/data/altapressru/parsed</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>SourceEncoding</name>
        <value>
          <string>WINDOWS-1251</string>
        </value>
      </nameValuePair>
      -->
      <nameValuePair>
        <name>SourceExtension</name>
        <value>
          <string>txt</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>Recursive</name>
        <value>
          <boolean>true</boolean>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>TaskProviderClassName</name>
        <value>
          <string>com.hp.hpl.events.tools.tasks.providers.FileToSingleTextWithAttrsTaskProvider</string>
        </value>
      </nameValuePair>
    </configurationParameterSettings>
    <typeSystemDescription>
      <imports>
        <import location="../../types/hp-text-ru-TypeSystem.xml"/>
      </imports>
    </typeSystemDescription>
    <capabilities/>
    <operationalProperties>
      <modifiesCas>true</modifiesCas>
      <multipleDeploymentAllowed>false</multipleDeploymentAllowed>
      <outputsNewCASes>true</outputsNewCASes>
    </operationalProperties>
  </processingResourceMetaData>
</collectionReaderDescription>
